# Database
DATABASE_URL=postgresql://user:password@host:port/database

# Express Backend URL (for Next.js to call Express APIs)
EXPRESS_URL=http://localhost:5000
NEXT_PUBLIC_EXPRESS_URL=http://localhost:5000

# Base URL for sitemap and canonical URLs
NEXT_PUBLIC_BASE_URL=https://yoforex.net

# SMTP Email Service
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_USER=noreply@yoforex.net
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@yoforex.net
SMTP_FROM_NAME=YoForex

# Session Secret
SESSION_SECRET=your-secure-random-string

# Replit Auth (OIDC)
REPLIT_CLIENT_ID=your-replit-client-id
REPLIT_CLIENT_SECRET=your-replit-client-secret
REPLIT_ISSUER=https://replit.com

# Base URL for OAuth callbacks
BASE_URL=http://localhost:5000
